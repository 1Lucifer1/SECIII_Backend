def GetRemoteServer(ip){
    def remote = [:]
    remote.host = ip
    remote.port = 22
    remote.user = 'root'
    remote.password = 'chenganchun.0811'
    remote.allowAnyHosts = true
    return remote
}

pipeline {
    agent none
    stages {
        stage('Clone to master') {
            agent {
                label 'master'
            }
            steps {
                echo "1. Git Clone Stage"
                git credentialsId: '79d2c1e6-d63c-4284-bd1f-6b4f1dfe7f56', url: "http://212.129.149.40/181250010_irbl/backend.git"
            }

        }
        stage('Maven Build') {
            agent {
                docker {
                    image 'maven:latest'
                    args '-v /root/.m2:/root/.m2'

                }

            }
            steps {
                echo "2. Maven Build Stage"
                sh 'mvn -B clean package -Dmaven.test.skip=true'

            }
        }
        stage('Image Build') {
            agent {
                label 'master'
            }
            steps {
                echo "3. Image Build Stage"
                sh 'docker build -f Dockerfile --build-arg jar_name=target/IRBL-0.0.1-SNAPSHOT.jar -t irbl:${BUILD_ID} . '
                sh 'docker tag irbl:${BUILD_ID} 101.132.148.43/backend/irbl:${BUILD_ID}'

            }

        }
        stage('Push') {
            agent {
                label 'master'
            }
            steps {
                echo "4. Push Docker Image Stage"
                sh "docker login -u admin -p Harbor12345@irbl 101.132.148.43"
                sh "docker push 101.132.148.43/backend/irbl:${BUILD_ID}"
            }
        }

        stage('Pull'){
            agent {
                label 'master'
            }
            steps {
                 echo "4. Pull Docker Image Stage"
                 server = GetRemoteServer('101.132.253.222')
                 sshCommand remote: server, command: "docker pull 101.132.148.43/backend/irbl:${BUILD_ID}"
            }
        }
    }
}